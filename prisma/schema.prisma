datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  platform     String
  status       String
  scheduledAt  DateTime?
  description  String?
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
